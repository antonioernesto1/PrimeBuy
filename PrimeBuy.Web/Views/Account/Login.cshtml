@model PrimeBuy.Application.ViewModels.AccountLoginModel;
@{
    ViewData["Title"] = "Login";
    var errorMessage = TempData["ErrorMessage"] as string;
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Login" method="post">
  @if(!string.IsNullOrEmpty(errorMessage))
  {
    <div class="alert alert-danger">@errorMessage</div>
  }
  <div class="col-md-3 mb-3 form-group">
    <label asp-for="UserName" class="form-label">Username</label>
    <input asp-for="UserName" id="login" required type="text" class="form-control">
  </div>
  <div class="col-md-3 mb-3 form-group">
    <label asp-for="Password" for="exampleInputPassword1" class="form-label">Password</label>
    <input asp-for="Password" id="password" required type="password" class="form-control">
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
<span style="margin-top:10px; margin-bottom:10px;">OR</span>
<br>
<button id="logAsAdmin" class="btn btn-secondary">Login as Admin</button>

<script src="~/js/setAdmin.js"></script>